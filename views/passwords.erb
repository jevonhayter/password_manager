<div class="jumbotron">
  <h1 class="text-center">Eaj Password Manager</h1>
</div>

<% @passwords.each_with_index do |pass, index| %>
<!-- On rows -->
<table class="table table-hover">
   <tr>
  <td class="active">Application:  <%= pass[:name] %></td>
  <td class="active">URL:  <a href="<%= pass[:url] %>"><%= pass[:url] %></a></td>
  <td class="active">Password:  <%= pass[:password] %></td>
  <td class="active"><a href="/edit_password/<%= index %>">Edit</a></td>
  <td class="active">
    <form action="/passwords/<%= index %>/destroy" method="post">
      <button type="submit" class="btn btn-danger">delete</button>
    </form>
  </td>
  <tr>
</table>
<% end %>

<a href='/passwords/new'>New Password</a>
