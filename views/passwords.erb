<div class="jumbotron danger">
  <h1 class="text-center">Eaj Password Manager</h1>
</div>

<% @passwords.each_with_index do |pass, index| %>
  <!-- On rows -->
  <table class="table table-hover">
    <tr>
      <td class="<%= color_code(index) %> col-md-3">Application:  <%= pass[:name] %></td>
      <td class="<%= color_code(index) %> col-md-3">URL:  <a href="<%= pass[:url] %>"> <%= pass[:url] %></a></td>
      <td class="<%= color_code(index) %> col-md-3">Password:  <%= pass[:password] %></td>
      <td class="<%= color_code(index) %> col-md-2"><a href="/edit_password/<%= index %>">Edit</a></td>
      <td class="<%= color_code(index) %> col-md-2">
        <form class="delete" action="/passwords/<%= index %>/destroy" method="post">
          <button type="submit" class="btn btn-danger">delete</button>
        </form>
      </td>
    <tr>
  </table>
<% end %>

<a href='/passwords/new'>New Password</a>
